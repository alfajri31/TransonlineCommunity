             x:Class="AwesomeApp.Views.MenuPage">

    <ContentPage.BindingContext>
        <vm:MenuViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>
            <SearchBar Placeholder="Search Item"></SearchBar>
            <Label Text="Welcome to Xamarin.Forms!"
